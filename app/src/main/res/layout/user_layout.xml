            tools:text="delete" />

        <Button
            android:id="@+id/mbtnupdate"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button"
            tools:text="update" />
    </LinearLayout>
